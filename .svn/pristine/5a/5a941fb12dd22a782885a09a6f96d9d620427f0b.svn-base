
.page {
  height: 100vh;
  width: 100%;
  background: #FFFFFF;
}
.header {
  height: 360rpx;
  width: 100%;
  overflow: hidden;
  position: relative;
}
.headermask {
  height: 360rpx;
  width: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  position: absolute;
  background: #000;
  opacity: 0.2;
}
.header-left {
  position: absolute;
  top: 30rpx;
  left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 1;
}
.header-left image {
  width: 40rpx;
  height: 40rpx;
}
.header image {
  width: 100%;
}
.user-info {
  position: absolute;
  top: 60rpx;
  left: 50%;
  margin-left: -150rpx;
  width: 300rpx;
  height: 300rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  z-index: 10;
  opacity: 1;
}
.user-info image {
  max-height: 172rpx;
  max-width: 172rpx;
  border-radius: 50%;
}
.user-name {
  margin: 10% 0;
  height: 60rpx;
  width: 100%;
  position: relative;
  text-align: center;
  color: #FFFFFF;
  font-size: 36rpx;
}
.user-name image {
  position: absolute;
  right: 20%;
  top: 10rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 0;
}
.bigbox {
  min-height: 300rpx;
  width: 100%;
  background: #f1f1f1;
  padding: 20rpx 0;
}
.box {
  min-height: 300rpx;
  width: 100%;
  padding: 40rpx 60rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}
.item {
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  width: 100%;
  border-bottom: 2rpx solid #EEEEEE;
}
.item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.chat {
  width: 100%;
  padding: 40rpx 60rpx;
  min-height: 90rpx;
  box-sizing: border-box;
}
.list {
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.item-left image {
  width: 40rpx;
  height: 40rpx;
}
.item-right image {
  width: 30rpx;
  height: 30rpx;
}
.item-right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 90rpx;
}
.item-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
}
.btn1 {
  width: 50%;
  height: 70rpx;
  background-color: #79c343;
  border-radius: 36rpx;
  color: #FFFFFF;
  line-height: 70rpx;
  text-align: center;
  margin: 5% auto 0;
}
.btn2 {
  width: 50%;
  height: 70rpx;
  background-color: #e97b78;
  border-radius: 36rpx;
  color: #FFFFFF;
  line-height: 70rpx;
  text-align: center;
  margin: 5% auto 0;
}