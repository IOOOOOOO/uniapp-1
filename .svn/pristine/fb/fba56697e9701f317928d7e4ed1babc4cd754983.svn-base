@import "../../common/vendor.wxss";

.header {
  height: 100rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  color: #000;
  box-shadow: 0 4rpx 8rpx 0 rgba(238, 238, 238, 0.5);
}
.header-left,
.header-right {
  width: 100rpx;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
}
.info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  min-height: 400rpx;
  width: 80%;
  margin: 80rpx auto;
}
.item {
  min-height: 100rpx;
  width: 100%;
  margin-bottom: 80rpx;
}
.item ._h3 {
  font-weight: bold;
  font-size: 36rpx;
  color: #585858;
}
.item-desc {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #b6b6b6;
  height: 30rpx;
  line-height: 30rpx;
}
.item-time {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #b6b6b6;
}
.btn {
  width: 50%;
  height: 70rpx;
  background-color: #e97b78;
  border-radius: 36rpx;
  display: block;
  line-height: 70rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 36rpx;
  margin: 40rpx auto 0;
}