
.header {
  height: 100rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background: #FFFFFF;
}
.header-left,
.header-right {
  width: 100rpx;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
}
.list-box {
  width: 100%;
  height: 200rpx;
  padding: 40rpx 0;
  box-sizing: border-box;
}
.list {
  width: 100%;
  height: 120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.item-left image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.item-left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 120rpx;
  margin: 0 40rpx;
}
.item-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.item-title {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #585858;
}
.item-desc {
  font-size: 24rpx;
  color: #b6b6b6;
  line-height: 40rpx;
  height: 40rpx;
}
.test {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.test ._h3 {
  font-size: 28rpx;
  color: #b6b6b6;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
}
.test ._textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  font-size: 28rpx;
  text-align: justify;
  background-color: #ffffff;
  margin-bottom: 40rpx;
}
.note {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background: #FFFFFF;
  padding: 0 40rpx;
}
.note ._span {
  margin-right: 30rpx;
}
.note ._input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 100rpx;
}