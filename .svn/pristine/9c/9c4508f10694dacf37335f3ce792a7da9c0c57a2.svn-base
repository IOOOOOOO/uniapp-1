
.header-bg {
  width: 100%;
  height: 55.55vw;
  overflow: hidden;
  position: relative;
}
.header-back {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  left: 25rpx;
  top: 40rpx;
}
.header-image {
  width: 100%;
}
.content-title {
  width: 100%;
  height: 80rpx;
  display: flex;
  font-size: 36rpx;
  border-bottom: 2rpx solid #cccccc;
  overflow: hidden;
}
.content-title .select {
  border-bottom: 6rpx solid #33cccc;
}
.content-item {
  width: 50%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  box-sizing: border-box;
}
.task-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx 0 20rpx;
  background: #f7f7f7;
  box-sizing: border-box;
}
.task-item {
  height: 160rpx;
  width: 100%;
  background: #fff;
  border-bottom: 2rpx solid #ccc;
  display: inline-flex;
  align-items: center;
  box-shadow: 0 2rpx 4rpx 0 #cccccc;
  margin-bottom: 16rpx;
  border-radius: 20rpx;
}
.task-item image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 40rpx;
}
.task-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 160rpx;
  justify-content: center;
}
.task-title {
  min-width: 100rpx;
  height: 50rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  color: #000000;
  font-weight: 700;
}
.task-desc {
  height: 60rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #b6b6b6;
  display: flex;
  align-items: center;
}
.task-btn {
  width: 200rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.task-button {
  width: 120rpx;
  height: 60rpx;
  background-color: #8cafea;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}