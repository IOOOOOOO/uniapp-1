@import "../../common/vendor.wxss";

.header {
  height: 88rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  background: #8cafea;
}
.header-left,
.header-right {
  min-width: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.header-left image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  font-size: 36rpx;
  color: #FFFFFF;
}
.add-num {
  background-color: #8cafea;
  border-radius: 6rpx;
  min-height: 250rpx;
  box-sizing: border-box;
  padding: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.add-num image {
  box-sizing: border-box;
  width: 150rpx;
  height: 180rpx;
  background: #FFFFFF;
  padding: 20rpx;
  padding-top: 40rpx;
}
.add-num ._p {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28.000000000000004rpx;
  color: #ffffff;
}
.add-t {
  height: 50rpx;
  padding: 10rpx;
  font-size: 24rpx;
  color: #b6b6b6;
}
.add-list {
  height: 150rpx;
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
  position: relative;
}
.add-list ._span:nth-child(1) {
  color: #6c6c6c;
  margin-left: 30rpx;
  line-height: 150rpx;
}
.add-list ._span:nth-child(2) {
  height: 100rpx;
  position: absolute;
  right: 30rpx;
  font-size: 24rpx;
  color: #b6b6b6;
  margin-top: 20rpx;
}