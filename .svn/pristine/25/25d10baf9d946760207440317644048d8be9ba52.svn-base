@import "../../common/vendor.wxss";

.header {
  height: 100rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background: #FFFFFF;
}
.header-left,
.header-right {
  width: 100rpx;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
}
.time-info {
  height: 160rpx;
  max-width: 100%;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 20rpx;
}
.time-img {
  height: 160rpx;
  width: 160rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.time-img image {
  max-height: 120rpx;
  border-radius: 50%;
  max-width: 120rpx;
}
.time-title {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 160rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 10rpx 0;
  box-sizing: border-box;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.time-title ._h1 {
  height: 80rpx;
  color: #6c6c6c;
  font-size: 36rpx;
  width: 100%;
  line-height: 80rpx;
}
.time-title ._h3 {
  height: 40rpx;
  width: 100%;
  color: #b6b6b6;
}
.time-pay {
  min-width: 200rpx;
  height: 160rpx;
  font-size: 28.000000000000004rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.time-pay .btn {
  width: 150rpx;
  height: 70rpx;
  background-color: #79c343;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  border-radius: 40rpx;
  color: #fff;
}