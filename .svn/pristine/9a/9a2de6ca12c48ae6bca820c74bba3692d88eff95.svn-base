
.header {
  height: 420rpx;
  width: 100%;
  overflow: hidden;
  position: relative;
}
.headermask {
  height: 420rpx;
  width: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  position: absolute;
  background: #000;
  opacity: 0.4;
}
.header image {
  width: 100%;
}
.user-info {
  position: absolute;
  top: 60rpx;
  left: 50%;
  margin-left: -150rpx;
  width: 300rpx;
  height: 300rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  z-index: 10;
  opacity: 1;
}
.user-info image {
  max-height: 172rpx;
  max-width: 172rpx;
  border-radius: 50%;
}
.user-nick {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #ffffff;
}
.username {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #ffffff;
}
.body-content {
  height: 60vh;
  width: 100%;
}
.body-content .title {
  height: 70rpx;
  line-height: 70rpx;
  width: 100%;
  font-size: 32rpx;
  color: #b6b6b6;
  padding-left: 20rpx;
}
.server-table {
  width: 100%;
  text-align: center;
  vertical-align: middle;
  border-top: 1rpx solid #e5e5e5;
}
.server-table ._ul ._li {
  width: 245rpx;
  height: 245rpx;
  border: solid 1rpx #e5e5e5;
  background-color: #FFFFFF;
  display: inline-block;
}
.server-table ._ul ._li:nth-child(1),
.server-table ._ul ._li:nth-child(4) {
  border-left: #FFFFFF;
}
.server-table ._ul ._li:nth-child(3),
.server-table ._ul ._li:nth-child(6) {
  border-right: #FFFFFF;
}
.table-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 60rpx 40rpx 10rpx 40rpx;
}
.table-text {
  color: #5c5c5c;
  font-size: 24rpx;
}
.mask {
  position: fixed;
  width: 100%;
  height: 100vh;
  z-index: 10;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .5);
}
.popup {
  position: absolute;
  z-index: 20;
  background-color: #ffffff;
  -webkit-box-shadow: 0 0 30rpx rgba(0, 0, 0, .1);
  box-shadow: 0 0 30rpx rgba(0, 0, 0, .1);
}
.popup-middle {
  width: 400rpx;
  height: 400rpx;
  border-radius: 10rpx;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
}
.popup-top {
  top: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
}
.popup-top text {
  line-height: 100rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
}
.popup-bottom {
  bottom: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
}
.popup-bottom text {
  line-height: 100rpx;
  font-size: 32rpx;
}
.popup .list-view {
  height: 600rpx;
}
.list-view-item {
  position: relative;
  padding: 22rpx 30rpx;
  overflow: hidden;
  font-size: 28rpx;
}
.list-view-item::after {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 30rpx;
  height: 2rpx;
  content: '';
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background-color: #c8c7cc;
}
.btn-row .btn {
  margin: 20rpx;
}
.desc {
  padding: 10rpx 20rpx;
  font-size: 20rpx;
  color: #8cafea;
  letter-spacing: 3rpx;
  line-height: 30rpx;
  margin-top: 120rpx;
  text-align: center;
}
.desc ._p {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}