@import "../../common/vendor.wxss";

.header {
  height: 100rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background: #FFFFFF;
  box-shadow: 0 4rpx 8rpx 0 rgba(238, 238, 238, 0.5);
}
.header-left,
.header-right {
  width: 100rpx;
  height: 100rpx;
  z-index: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
}
.dialogTime {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #b6b6b6;
  text-align: center;
  margin: 40rpx 0;
}
.you {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  width: 100%;
  min-height: 140rpx;
  margin: 40rpx 0;
}
.you-image {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  width: 140rpx;
  height: 140rpx;
}
.dialog image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.you-box {
  min-width: 40rpx;
  max-width: 50%;
  min-height: 60rpx;
  padding: 15rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  word-break: break-word;
  background: #FFFFFF;
  border-radius: 10rpx;
}
.my {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
  justify-content: flex-end;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  width: 100%;
  min-height: 140rpx;
  margin: 40rpx 0;
}
.my-image {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  width: 140rpx;
  height: 140rpx;
}
.my-box {
  min-width: 40rpx;
  max-width: 50%;
  min-height: 60rpx;
  padding: 15rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  word-break: break-word;
  background-color: #79c343;
  border-radius: 10rpx;
  color: #ffffff;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  min-height: 100rpx;
  width: 100%;
}
.send-box {
  position: relative;
  bottom: 0;
  left: 0;
  min-height: 300rpx;
  width: 100%;
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
}
.send-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-height: 100rpx;
  margin: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.item-image {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  position: relative;
}
.send-item image {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 50%;
  right: 0;
  margin-left: -40%;
  width: 80%;
  height: 80%;
}
.send-item ._p {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.send-message {
  position: relative;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 2rpx solid #EEEEEE;
}
.send-message image {
  height: 60rpx;
  width: 60rpx;
}
.send-message ._input {
  margin: 0;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 60rpx;
  background-color: #ffffff;
  border: 2rpx solid #EEEEEE;
  border-radius: 12rpx;
}
.mgl {
  margin-left: 20rpx;
}
.mgr {
  margin-right: 20rpx;
}