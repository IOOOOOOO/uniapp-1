
.page {
  background: #F1F1F1;
  min-height: 100vh;
  width: 100%;
}
.header {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  color: #FFFFFF;
  background-color: #8cafea;
}
.header-left,
.header-right {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  flex: 1;
  text-align: center;
}
.moneyOver {
  height: 340rpx;
  width: 100%;
  background: #8cafea;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #FFFFFF;
  font-size: 28rpx;
}
.logo {
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo-box {
  height: 114rpx;
  width: 114rpx;
  margin: 20rpx 0;
}
.logo-box image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.over {
  height: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.num {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 48rpx;
}
.desc {
  height: 80rpx;
  line-height: 80rpx;
}
.address {
  height: 440rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  padding: 20rpx;
  font-size: 32rpx;
}
.address-box {
  width: 100%;
  height: 400rpx;
  background: #FFFFFF;
  box-shadow: 0 0 8rpx 0 #d3d3d3;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 40rpx 40rpx 0 40rpx;
}
.address-item {
  width: 100%;
  height: 80rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}
.item-left {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #585858;
}
.item-content {
  flex: 1;
}
.item-content ._input {
  height: 76rpx;
  border-radius: 10rpx;
  background: #fff;
  padding-left: 20rpx;
  border: solid 2rpx #d0d0d0;
}
.placeholder {
  font-size: 28rpx;
  color: #b6b6b6;
}
.qrcode {
  width: 40rpx;
  height: 40rpx;
}
.item-right {
  width: 80rpx;
  height: 80rpx;
  color: #b6b6b6;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.arrival {
  height: 80rpx;
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.arrival-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.btn {
  width: 50%;
  height: 70rpx;
  margin: 5% auto 0;
  background-color: #e97b78;
  border-radius: 32rpx;
  display: flex;
  color: #fff;
  align-items: center;
  justify-content: center;
}