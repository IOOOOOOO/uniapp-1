
.header {
  height: 88rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background: #fff;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx 0 rgba(238, 238, 238, 0.5);
}
.header-left {
  min-width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-left image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  flex: 1;
  display: flex;
  justify-content: center;
  font-size: 36rpx;
}
.header-right {
  min-width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-right image {
  max-height: 40rpx;
  max-width: 40rpx;
}
.body-content {
  text-align: center;
}
.time {
  height: 60rpx;
  width: 100%;
  padding-left: 20rpx;
  line-height: 80rpx;
  color: #b6b6b6;
  font-size: 24rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.time-info {
  height: 160rpx;
  max-width: 100%;
  background: #fff;
  display: flex;
  margin-top: 20rpx;
}
.time-img {
  height: 160rpx;
  width: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.time-img image {
  max-width: 120rpx;
  max-height: 120rpx;
}
.time-title {
  flex: 1;
  height: 160rpx;
  display: flex;
  padding: 10rpx 0;
  box-sizing: border-box;
  flex-direction: column;
}
.time-title ._h1 {
  height: 80rpx;
  color: #6c6c6c;
  font-weight: 700;
  font-size: 36rpx;
  width: 100%;
  line-height: 80rpx;
}
.time-title ._h3 {
  height: 40rpx;
  width: 100%;
  color: #b6b6b6;
}
.time-pay {
  min-width: 100rpx;
  padding-right: 20rpx;
  line-height: 160rpx;
  height: 160rpx;
  font-size: 28.000000000000004rpx;
  color: #e97b78;
}