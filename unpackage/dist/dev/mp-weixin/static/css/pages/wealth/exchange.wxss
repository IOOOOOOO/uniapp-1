
.header {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  color: #FFFFFF;
  background: #8cafea;
}
.header-left,
.header-right {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  flex: 1;
  text-align: center;
}
.item {
  width: 100%;
  height: 140rpx;
  border-bottom: 2rpx solid #eee;
  display: flex;
}
.item-image {
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-image image {
  width: 114rpx;
  height: 114rpx;
}
.item-title {
  flex: 1;
  height: 140rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #6c6c6c;
}
.item-right {
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.item-num {
  font-size: 36rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #6c6c6c;
}
.item-desc {
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
  color: #b6b6b6;
}