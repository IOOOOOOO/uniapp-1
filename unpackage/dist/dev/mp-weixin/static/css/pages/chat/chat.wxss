
.header-fix {
  height: 100rpx;
  width: 100%;
}
.header {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background: #8cafea;
  position: fixed;
}
.header-left,
.header-right {
  width: 100rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  flex: 1;
  text-align: center;
}
.chat-item {
  width: 100%;
  height: 160rpx;
  background: #FFFFFF;
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.chat-img {
  min-width: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.chat-img image {
  max-width: 100rpx;
  max-height: 100rpx;
  border-radius: 50%;
}
.chat-title {
  width: calc(100% - 160rpx);
  height: 160rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.chat-top {
  height: 60rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.chat-top-info {
  min-width: 1%;
  max-width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #6c6c6c;
  display: block;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.chat-top-time {
  flex: 1;
  min-width: 130rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  justify-content: flex-end;
}
.info-point {
  display: block;
  margin-left: 10rpx;
  min-width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #8cafea;
}
.chat-bottom {
  height: 40rpx;
  align-items: center;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.red-point {
  margin-right: 20rpx;
  min-width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #e97b78;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
}
.chat-bottom-info {
  min-width: 1%;
  max-width: 90%;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}