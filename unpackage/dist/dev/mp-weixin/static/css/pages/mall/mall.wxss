
.header {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background: #FFFFFF;
}
.header-left,
.header-right {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  flex: 1;
  text-align: center;
}
.content {
  width: 90%;
  min-height: 300rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #FFFFFF;
  margin: 30rpx auto 0;
}
.bord {
  border-bottom: 2rpx solid #EEEEEE;
}
.mgt {
  margin-top: 40rpx;
}
.item {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.item-title {
  padding-right: 40rpx;
  width: 130rpx;
  box-sizing: border-box;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #6c6c6c;
}
.item-content {
  flex: 1;
  font-size: 28rpx;
}
.item image {
  position: absolute;
  left: 10rpx;
  top: 30rpx;
  width: 35rpx;
  height: 40rpx;
}
.btn {
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  display: block;
  background: #e97b78;
  margin: 60rpx auto 0;
  color: #FFFFFF;
  text-align: center;
  border-radius: 32rpx;
}