
.header {
  height: 88rpx;
  width: 100%;
  display: flex;
  align-items: center;
  overflow: hidden;
  z-index: 10;
  position: absolute;
  top: 0;
}
.header-left {
  min-width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-left image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  flex: 1;
  overflow: hidden;
  display: flex;
  justify-content: center;
  font-size: 36rpx;
  color: #C8C7CC;
}
.header-right image {
  max-height: 40rpx;
  max-width: 40rpx;
}
.header-right {
  min-width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #C8C7CC;
}
.header-bg-img {
  width: 100%;
  height: 300rpx;
  background: #585858;
}
.header-bg-img image {
  position: absolute;
  width: 100%;
  height: 300rpx;
  top: 0;
  left: 0;
  opacity: 0.3;
}
.store image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: -100rpx;
}
.store ._p {
  color: #b6b6b6;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.body-content {
  text-align: center;
}
.store-list ._li {
  height: 100rpx;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-between;
  border-bottom: solid #F7F7F7 1rpx;
}
.store-list ._li>._span {
  color: #585858;
  font-size: 30rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
}
.store-list-right ._span {
  font-size: 30rpx;
  color: #b6b6b6;
  line-height: 100rpx;
}
.store-list-right image {
  width: 20rpx;
  height: 20rpx;
  padding-right: 10rpx;
  padding-left: 10rpx;
}
.open-btn {
  margin-left: 23%;
  width: 54%;
  height: 68rpx;
  background-color: #e97b78;
  line-height: 68rpx;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}