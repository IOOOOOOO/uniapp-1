
.header {
  height: 88rpx;
  width: 100%;
  display: flex;
  background: #fff;
  align-items: center;
  box-shadow: 0 2rpx 4rpx 0 rgba(238, 238, 238, 0.5);
}
.header-left,
.header-right {
  min-width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-left image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  flex: 1;
  overflow: hidden;
  display: flex;
  justify-content: center;
  font-size: 36rpx;
}
.body-content {
  text-align: center;
}
.list-box {
  margin: 20rpx;
  padding: 0 40rpx;
  background: #fff;
  border-radius: 10rpx;
  padding-bottom: 20rpx;
}
.height-margin {
  margin-top: 40rpx;
}
.list-box ._li {
  padding-top: 20rpx;
  border-bottom: 1rpx solid #eee;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
}
.list-item-title {
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0;
  color: #606060;
}
.list-item-content {
  color: #b6b6b6;
}
.list-box ._li image {
  width: 20rpx;
  height: 20rpx;
  margin-top: 50rpx;
}