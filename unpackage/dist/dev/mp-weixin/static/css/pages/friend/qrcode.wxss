
.header {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background: #FFFFFF;
}
.header-left,
.header-right {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  flex: 1;
  text-align: center;
}
.box {
  background: #ccc;
  border-radius: 6rpx;
  width: 80%;
  height: 800rpx;
  margin: 100rpx auto;
  box-sizing: border-box;
  padding: 60rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.box .qrcode {
  width: 500rpx;
  background: #fff;
  height: 500rpx;
  box-sizing: border-box;
  padding: 60rpx;
}
.qrcode image {
  width: 100%;
  height: 100%;
}
.desc {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #ffffff;
}
.btn {
  margin-top: 30rpx;
  width: 80%;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background: #fff;
  border-radius: 36rpx;
}