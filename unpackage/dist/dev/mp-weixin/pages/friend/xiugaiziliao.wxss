@import "../../common/vendor.wxss";

.header {
  height: 128rpx;
  width: 100%;
  padding-top: 40rpx;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background: #FFFFFF;
}
.header-left,
.header-right {
  width: 100rpx;
  height: 88rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
}
.content {
  width: 90%;
  min-height: 200rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #FFFFFF;
  margin: 30rpx auto 0;
}
.bord {
  border-bottom: 2rpx solid #EEEEEE;
}
.mgt {
  margin-top: 40rpx;
}
.item {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.item-title {
  padding-right: 40rpx;
  width: 130rpx;
  box-sizing: border-box;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #6c6c6c;
}
.item-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  font-size: 28rpx;
}
.item-image {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
  justify-content: flex-end;
  height: 100rpx;
}
.item-image image:nth-child(1) {
  width: 80rpx;
  border-radius: 50%;
  height: 80rpx;
  margin-right: 20rpx;
}
.item-image image:nth-child(2) {
  width: 30rpx;
  height: 30rpx;
}
.btn {
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  display: block;
  background: #e97b78;
  margin: 60rpx auto 0;
  color: #FFFFFF;
  text-align: center;
  border-radius: 32rpx;
}