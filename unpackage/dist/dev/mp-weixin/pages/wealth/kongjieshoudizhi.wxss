@import "../../common/vendor.wxss";

.header {
  height: 100rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background: #FFFFFF;
  box-shadow: 0 4rpx 8rpx 0 rgba(238, 238, 238, 0.5);
}
.header-left,
.header-right {
  width: 100rpx;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
}
.box {
  margin: 30% auto 0;
  width: 50%;
  height: 300rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.box image {
  width: 240rpx;
  height: 200rpx;
}
.box ._p {
  margin: 30rpx 0;
  font-size: 32rpx;
  color: #b6b6b6;
}
.btn {
  width: 50%;
  height: 70rpx;
  background-color: #e97b78;
  border-radius: 36rpx;
  color: #FFFFFF;
  line-height: 70rpx;
  text-align: center;
  margin: 5% auto 0;
}